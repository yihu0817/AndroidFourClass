<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/file_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/file_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/file_write_pic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写入图片到公共区域" />
    
    
     <Button
        android:id="@+id/file_reader_pic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取图片显示" />

     
     
    <ImageView
        android:id="@+id/file_reader_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    
     <Button
        android:id="@+id/file_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遍历文件" />
</LinearLayout>