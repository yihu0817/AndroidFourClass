<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/auto_view_layout_relative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- android:textAppearance="?android:attr/textAppearanceLargePopupMenu" -->
    <!-- style="?android:attr/dropDownItemStyle" -->

    <TextView
        android:id="@+id/auto_serach_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_search_autocomplete" />
    <!-- android:onClick="onSearchClicked" -->

    <TextView
        android:id="@+id/auto_search_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/auto_serach_pic"
        android:ellipsize="marquee"
        android:padding="5dp"
        android:singleLine="true" />
    <!-- 就是这个害人精  这个属性加上后就导致下拉框不能被选中 -->
    <!-- android:textIsSelectable="true" -->

    <TextView
        android:id="@+id/auto_search_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="5dp" />
    <!-- android:layout_toRightOf="@id/auto_search_view" -->

</RelativeLayout>