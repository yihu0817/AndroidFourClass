<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onLinerLayoutClickView"
            android:text="线型布局" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRelativeLayoutClickView"
            android:text="相对布局" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onFrameLayoutClickView"
            android:text="单帧布局" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onTableLayoutClickView"
            android:text="表格布局" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onGridLayoutClickView"
            android:text="网格布局" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onInfalterClickView"
            android:text="InflaterLayout学习" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCodeClickView"
            android:text="代码布局" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onTextViewClickView"
            android:text="文本(TextView)控件" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onEditTextClickView"
            android:text="输入框（EditText）控件" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onLoginClickView"
            android:text="登录实例1" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onLoginTwoClickView"
            android:text="登录实例2" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onImageViewClickView"
            android:text="图片控件ImageView" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onImageViewTwoClickView"
            android:text="图片控件ImageView之二" >
        </Button>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClickView"
            android:text="单选控件" >
        </Button>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onLifeClickView"
            android:text="生命周期" >
        </Button>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onUtilClickView"
            android:text="Android单位" >
        </Button>
    </LinearLayout>

</ScrollView>